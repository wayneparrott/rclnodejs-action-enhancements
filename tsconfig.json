{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "strict": true,
    "lib": ["es2017"],
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false
  }, 
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "examples/**/*.ts" 
   ],
  "exclude": [
    "unused/**/*.ts"
  ]
}